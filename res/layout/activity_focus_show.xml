<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".FocusShowActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/spectacle" />

    <TextView
        android:id="@+id/labelNbAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="@string/nbActSpec" />

    <TextView
        android:id="@+id/labelDuree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelNbAct"
        android:layout_alignTop="@+id/imageView1"
        android:text="@string/dureeSpec" />

    <TextView
        android:id="@+id/labelDateCrea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelNbAct"
        android:layout_below="@+id/labelNbAct"
        android:layout_marginTop="20dp"
        android:text="@string/dateCreaSpec" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/labelDateCrea"
        android:layout_marginTop="35dp"
        android:text="@string/infoSpec" />

    <TextView
        android:id="@+id/usefullInfos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/dureeSpec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelDuree"
        android:layout_alignBottom="@+id/labelDuree"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/labelNbAct"
         />

    <TextView
        android:id="@+id/dateCrea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelDateCrea"
        android:layout_alignBottom="@+id/labelDateCrea"
        android:layout_alignRight="@+id/dureeSpec"
         />

    <TextView
        android:id="@+id/nbAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/labelDateCrea"
        android:layout_alignLeft="@+id/dureeSpec"
         />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usefullInfos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar1"
        android:layout_toRightOf="@+id/labelNbAct"
        android:text="@string/buttonShare" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/ratingBar1"
        android:text="@string/validateNote" />

</RelativeLayout>
</ScrollView>